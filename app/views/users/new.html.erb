<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="text-center lead">Crea un nuevo usuario</h1>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control input-sm", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control input-sm", placeholder: "password" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-sm", placeholder: "nombre" %>
      </div>
      <div class="input-group">
        <span class="input-group-addon" id="sizing-addon2">@</span>
        <%= f.text_field :instagram_handle, class: "form-control input-sm", placeholder: "Instagram" %>
      </div>
      <div class="action">
        <%= f.submit class: "btn btn-default btn-block btn-sm"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
