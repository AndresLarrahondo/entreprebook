<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="lead text-center"><%= form_title %></h1>

      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <uk>
            <% @book.errors.full_messages.each do |msg|%>
             <li> <%= msg %></li>
            <% end %> 
          </uk>
        </div>
      <% end %>

      <%= form_for @book do |f| %>
      <div class="form-group">
        <%= f.label :name, "Nombre"%>
        <%= f.text_field :name, class: "form-control", placeholder: "Ingresa el nombre del book" %>
      </div>
      <div class="form-group">
        <%= f.label :url, "Ingresa la url de tu book"%>
        <%= f.url_field :url, class: "form-control", placeholder: "Ingresa la url del book" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Ingresa el detalle de tu book"%>
        <%= f.text_area :description, class: "form-control", placeholder: "Ingresa detalles de tu book" %>
      </div>
      <div>
        <%= f.submit form_title, class: "btn btn-default btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
