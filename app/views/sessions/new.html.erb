<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class="text-center lead">Ingresar</h1>
      <%= form_tag controller: :sessions, action: :create do %>
       <div class="form-group">
         <%= label_tag(:email, "Email") %>
         <%= email_field_tag(:email, nil, class: " form-control input-sm")%>
       </div>
       <div class="form-group">
         <%= label_tag(:password, "Password") %>
         <%= password_field_tag(:password, nil, class: "form-control input-sm") %>
       </div>
       <div class="text-right">
         <%= submit_tag("Ingresar", class: "btn btn-default btn-sm btn-block")%>
       </div>
      <% end %>
    </div>
  </div>
</div>
